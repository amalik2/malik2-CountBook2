<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adil.countbook.CounterDetailsActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/detailsInvalidNameText"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginBottom="155dp"
        android:layout_marginLeft="46dp"
        android:text="ERROR: Name can't be empty"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="46dp" />

    <TextView
        android:id="@+id/dateDynamicText"
        android:layout_width="223dp"
        android:layout_height="21dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="0dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="188dp"
        android:ems="10"
        android:inputType="textShortMessage"
        android:maxLength="1000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/valueEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="17"
        android:text="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/currentValueEditableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="137dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="17"
        android:text="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentValueText"
        android:layout_width="132dp"
        android:layout_height="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="135dp"
        android:text="Current Value:"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detailsNameText"
        android:layout_marginStart="29dp" />

    <TextView
        android:id="@+id/detailsDescText"
        android:layout_width="118dp"
        android:layout_height="27dp"
        android:layout_marginLeft="29dp"
        android:text="Comment:"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="204dp"
        android:layout_marginStart="29dp" />

    <TextView
        android:id="@+id/detailsValueText"
        android:layout_width="132dp"
        android:layout_height="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="73dp"
        android:text="Initial Value:"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detailsNameText"
        android:layout_marginStart="29dp" />

    <TextView
        android:id="@+id/detailsNameText"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:text="Name:"
        android:textSize="18sp"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="28dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="300"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/detailsDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onDeleteButtonClicked"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="76dp"
        android:layout_marginRight="87dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="87dp" />

    <Button
        android:id="@+id/detailsFinishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onFinishButtonClicked"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="65dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="65dp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="104dp"
        android:layout_height="21dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="29dp"
        android:text="Last Edited At:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
